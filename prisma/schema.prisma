generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Idea {
  id         String              @id @default(uuid())
  createdAt  DateTime            @default(now())
  userId     String              
  
  title      String
  description String
  emailText   String
  website     String
  
  stats      IdeaStats[]         
  emails     EmailRecord[]       
}

model IdeaStats {
  id        String   @id @default(uuid())
  ideaId    String
  idea      Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  date      DateTime 
  visits    Int      @default(0) 
  emailCount Int     @default(0) 

  @@unique([ideaId, date])
}

model EmailRecord {
  id        String   @id @default(uuid())
  ideaId    String
  idea      Idea     @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  email     String   
  createdAt DateTime @default(now()) 

  @@unique([ideaId, email])
}
